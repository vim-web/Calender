
@model IEnumerable<Clnder.Models.TodoTask>
@{
    ViewBag.Title = "To-Do List";
}

<h2>To-Do List</h2>
<p><a href="@Url.Action("Create")" class="btn btn-primary">Add New Task</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Due Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Status</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = task.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = task.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


