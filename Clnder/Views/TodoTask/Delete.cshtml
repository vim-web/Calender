

@model Clnder.Models.TodoTask

@{
    ViewBag.Title = "Delete Task";
}

<div class="container mt-5">
    <h2 class="text-center text-danger">Delete Task</h2>

    <div class="alert alert-warning">
        <h4 class="alert-heading">Are you sure you want to delete this task?</h4>
        <p>This action cannot be undone, and the task will be permanently removed.</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            Task Details
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">
                <strong>Description:</strong> @Model.Description
            </p>
            <p class="card-text">
                <strong>Due Date:</strong> @Model.DueDate.ToString("MM/dd/yyyy")
            </p>
        </div>
    </div>

    <div class="mt-4">
        @using (Html.BeginForm("Delete", "TodoTask", new { id = Model.Id }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-danger">Confirm Delete</button>
                <a href="@Url.Action("Index")" class="btn btn-lg btn-secondary">Cancel</a>
            </div>
        }
    </div>
</div>

